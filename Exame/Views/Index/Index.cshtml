<script src="~/JScripts/MovimentoGrid.js"></script>
<div class="row">
    <h1 class="text-center">Movimentos Manuais</h1>
    <div class="col-md-12">
        <div class="form-group col-md-6 col-md-offset-3">
            <div class="form-group col-md-6">
                <label for="input-mes">Mes:</label>
                <input type="number" class="form-control" id="input-mes" aria-describedby="data-mes" placeholder="Insira o mes">
            </div>
            <div class="form-group col-md-6">
                <label for="input-ano">Ano:</label>
                <input type="number" class="form-control" id="input-ano" placeholder="Insira o Ano">
            </div>
            <div class="form-group col-md-6">
                <label for="input-produto">Produto:</label>
                <select class="form-control" id="input-produto">
                    <option value="0">Selecione...</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="input-cosif">Cosif:</label>
                <select class="form-control" id="input-cosif">
                    <option value="0">Selecione...</option>
                </select>
            </div>
            <div class="form-group col-md-12">
                <label for="input-valor">Valor:</label>
                <input type="text" class="form-control" id="input-valor" placeholder="Insira o Valor">
            </div>
            <div class="form-group col-md-12">
                <label for="textarea">Descrição</label>
                <textarea class="form-control" id="control-textarea" rows="6"></textarea>
            </div>
            <div class="col-md-12 btn-submits">
                <button class="btn btn-warning" id="btn-limpar">Limpar</button>
                <button class="btn btn-primary" id="btn-novo">Novo</button>
                <button type="submit" class="btn btn-success" id="btn-incluir">Incluir</button>
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/GridView/_GridView.cshtml");
</div>